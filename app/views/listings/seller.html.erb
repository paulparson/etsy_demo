  <div class="row">
  <% if user_signed_in? %>
      <div class="container center">
        <div class="row add-listing">
          <p class="lead">You're just getting started!</p>
          <p>Add as many listings as you like. We want the world to see your amazing creations!</p><br>
          <%= link_to 'Add a New Listing', new_listing_path, class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>

    <div class="responsive-table">
      <table class="table table-striped table-bordered">
        <tr>
          <th>Image</th>
          <th class="name">Name</th>
          <th>Description</th>
          <th>Price</th>
          <th>Action</th>
        </tr>

        <% @listings.each do |listing| %>
          <tr>
            <td><%= image_tag listing.image.url(:thumb) %></td>
            <td><%= listing.name %></td>
            <td><%= listing.description %></td>
            <td><%= number_to_currency(listing.price) %></td>
            <td>
              <%= link_to content_tag(:button, content_tag(:span, nil, class: "glyphicon glyphicon-eye-open"), class: "btn btn-default"), listing %>
              <%= link_to content_tag(:button, content_tag(:span, nil, class: "glyphicon glyphicon-wrench"), class: "btn btn-default margin-top-5"), edit_listing_path(listing) %>
              <%= link_to content_tag(:button, content_tag(:span, nil, class: "glyphicon glyphicon-trash"), class: "btn btn-default margin-top-5"), listing, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
          <% end %>
        </table>
    </div>
  </div>
